{
  "global_tags": {
    "owning_team": "Incubator",
    "Environment": "development",
    "Department": "Product",
    "Product": "Network"
  },

  "resources": [
    {
      "id": "host1",
      "provider": "aws",
      "type": "ec2",
      "size": "t3.small",
      "ami_name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-server-????????",
      "user_name": "ubuntu"
    }
  ],
  "services": [
    {
      "id": "cron1",
      "destinations": ["host1"],
      "source_repository": "https://github.com/newrelic/open-install-library.git",
      "deploy_script_path": "test/deploy/linux/ktranslate/install/syslog/roles",
      "port": 9999,
      "params": {
        "create_env_var": true
      }
    }
  ],
  "instrumentations": {
    "resources": [
      {
        "id": "ktranslate_syslog",
        "resource_ids": ["host1"],
        "provider": "newrelic",
        "source_repository": "https://github.com/newrelic/open-install-library.git",
        "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
        "params": {
          "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/network/ktranslate-agent/recipes/newrelic/infrastructure/network/ktranslate-syslog.yml",
          "validate_output": "(Ktranslate agent integration)\\s+\\(installed\\)"
        }
      }
    ]
  }
}
