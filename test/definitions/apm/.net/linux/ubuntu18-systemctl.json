{
  "global_tags": {
      "owning_team": "OpenSource",
      "Environment": "development",
      "Department": "Product",
      "Product": "Virtuoso"
  },

  "resources": [{
      "id": "netubuntu18",
      "display_name": "NetUbuntu18Host",
      "provider": "aws",
      "type": "ec2",
      "size": "t3a.micro",
      "ami_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-????????.1",
      "user_name": "ubuntu"
  }],

  "services": [{
    "id": "netcore",
    "destinations": ["netubuntu18"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/.net/install-netcore/ubuntu/roles",
    "port": 9999
  },{
    "id": "webapp1",
    "display_name": "Web Portal (systemctl)",
    "destinations": ["netubuntu18"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/.net/deploy-webapplication/roles",
    "port": 9091
  },{
    "id": "webapp2",
    "display_name": "Routing Service (systemctl)",
    "destinations": ["netubuntu18"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/.net/deploy-webapplication/roles",
    "port": 9092
  },{
    "id": "webapp3",
    "display_name": "Core Login Service (systemctl)",
    "destinations": ["netubuntu18"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/.net/deploy-webapplication/roles",
    "port": 9093
  }],

  "instrumentations": {
    "resources": [
      {
          "id": "nr_infra",
          "resource_ids": ["netubuntu18"],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/windows/newrelic-cli/install-recipe/roles",
          "params": {
              "recipe_content_url": [
                  "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/apm/.net/linux/net-debian.yml"
              ]
          }
      },
      {
          "id": "nr_apm_is_having_data",
          "resource_ids": ["netubuntu18"],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/assertions/recipe-is-valid/roles",
          "params": {
              "recipe_validation_nrql_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/apm/.net/linux/net-debian.yml"
          }
      }
      ]
  }
}