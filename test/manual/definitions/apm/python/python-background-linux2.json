{
  "services": [
    {
      "id": "python1",
      "display_name": "Python App 1",
      "source_repository": "-b python_no_supervisord https://github.com/newrelic/demo-pythontron.git",
      "deploy_script_path": "/deploy/linux/roles",
      "port": 5001,
      "relationships": [],
      "destinations": ["host1"],
      "files": [
        {
          "destination_filepath": "cronjob.json",
          "content": [
            {
              "frequency": "* * * * *",
              "job": "for ((i=1;i<=30;i++)); do curl '[service:python1:url]/'; curl '[service:python1:url]/api/inventory'; sleep 1; done"
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "host1",
      "provider": "aws",
      "type": "ec2",
      "size": "t2.micro"
    }
  ],
  "instrumentations": {
  }
}
